/* pages/index/index.wxss */
.map-container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.map-text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 300px;
  background: #fff;
  padding: 0 15px;
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}
.test-button {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 300px;
    background: #fff;
    padding: 0 15px;
}

/* 中心坐标 */
.cover-on-map {
  position: absolute;
  overflow: visible;
  top: calc(50% - 200rpx);
  left: calc(50% - 100rpx);
  height: 200rpx;
  width: 200rpx;
}
.user-logo {
  position: absolute;
  z-index: 1;
  left: 26%;
  top: 15%;
  height: 50%;
  width: 50%;
}
.user-frame {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.cover-on-test {
  position: absolute;
  top: 50rpx;
  left: 0;
  background: orange;
  color: #fff;
}