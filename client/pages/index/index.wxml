<view class="map-container">
  <map 
    class="map" id="map"
    show-location="{{false}}"
    scale="{{scale}}"
    controls="{{controls}}"
    longitude="{{location.longitude}}" 
    latitude="{{location.latitude}}" 
    bindregionchange="regionchange">
  </map>
</view>
<cover-view class="cover-on-map">
  <cover-view class="map"></cover-view>
  <cover-image src="/resources/user.jpg" class="user-logo"></cover-image>
  <cover-image src="/resources/hana.png" class="user-frame"></cover-image>
</cover-view>